{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "PROD",
    "DEV",
    "DISCORD_BOT_TOKEN",
    "DISCORD_BOT_USER_ID",
    "HUB_SECRET",
    "JWT_ISSUER",
    "JWT_AUDIENCE",
    "JWT_PUBLIC_JWK_URL",
    "HUB_ENDPOINT",
    "PORT",
    "ROOM_TOKEN_SECRET",
    "DISCORD_CLIENT_SECRET",
    "WS_AUTH_SECRET",
    "WS_PORT",
    "ADMIN_CLEANUP_SECRET",
    "NODE_ENV",
    "VITE_DISCORD_GUILD_ID",
    "GATEWAY_WS_PORT",
    "GATEWAY_WS_URL",
    "LINK_TOKEN",
    "BLOB_READ_WRITE_TOKEN",
    "LOG_LEVEL",
    "PEERJS_PORT",
    "PEERJS_PATH",
    "PEERJS_SSL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "format": {
      "dependsOn": ["^format"],
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
