{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "BASE_URL",
    "DEV",
    "DISCORD_BOT_TOKEN",
    "DISCORD_BOT_USER_ID",
    "PRIMARY_GUILD_ID",
    "ROOM_TOKEN_SECRET",
    "ENABLE_PRIVATE_ROOMS",
    "HUB_SECRET",
    "JWT_ISSUER",
    "JWT_AUDIENCE",
    "JWT_PUBLIC_JWK_URL",
    "HUB_ENDPOINT",
    "PORT"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "format": {
      "dependsOn": ["^format"],
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
