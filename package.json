{
  "name": "spell-coven",
  "engines": {
    "node": "~22.20",
    "bun": "^1.3.8"
  },
  "engineStrict": true,
  "packageManager": "bun@1.3.8",
  "scripts": {
    "postinstall": "[ -n \"$CI\" ] || bunx sherif@latest -f",
    "build": "bunx turbo run build",
    "dev": "bunx turbo run dev",
    "convex:dev": "bunx convex dev",
    "convex:test": "CONVEX_DEPLOYMENT= CONVEX_AGENT_MODE=anonymous CONVEX_AUTH_TEST_MODE=true CONVEX_URL=http://127.0.0.1:3210 bun run convex:dev -- --local",
    "test": "bunx turbo run test",
    "lint": "bunx turbo run lint",
    "lint:fix": "bunx turbo run lint -- --fix",
    "format": "bunx turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "bunx turbo run format -- --write",
    "typecheck": "bunx turbo run typecheck",
    "preflight": "bunx turbo run typecheck && bunx turbo run lint && bunx turbo run format"
  },
  "devDependencies": {
    "@auth/core": "^0.37.0",
    "@convex-dev/auth": "^0.0.90",
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@vercel/blob": "^2.0.0",
    "bun-types": "^1.3.1",
    "convex": "^1.31.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jose": "^6.1.3",
    "lint-staged": "^15.2.11",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8.53.0",
    "@sentry/node": "^8.45.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "!packages/mtg-image-db"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "@types/react": "^19.2.2",
      "@types/react-dom": "^19.2.2",
      "react-error-boundary": "^4.0.0",
      "eslint": "^9.20.0",
      "prettier": "^3.6.2",
      "typescript": "~5.9",
      "typescript-eslint": "^8.24.1",
      "playwright": "^1.55.1",
      "@playwright/test": "^1.55.1",
      "dotenv-cli": "^7.4.2",
      "tailwindcss": "^4.1.11"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,mjs}": [
      "prettier --write --ignore-path .prettierignore --ignore-path .gitignore"
    ]
  },
  "private": true
}
