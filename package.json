{
  "name": "spell-coven",
  "engines": {
    "node": "~22.20",
    "bun": "^1.1.30"
  },
  "engineStrict": true,
  "packageManager": "bun@1.1.30",
  "scripts": {
    "build": "bunx turbo run build",
    "dev": "bunx turbo run dev",
    "dev:convex": "bunx convex dev --local",
    "test": "bunx turbo run test",
    "lint": "bunx turbo run lint && bun run lint:convex",
    "lint:convex": "bunx eslint --config convex/eslint.config.mjs convex/ --max-warnings 0",
    "lint:fix": "bunx turbo run lint -- --fix && bunx eslint --config convex/eslint.config.mjs convex/ --max-warnings 0 --fix",
    "format": "bunx turbo run format --continue -- --cache --cache-location .cache/.prettiercache && bun run format:convex",
    "format:convex": "bunx prettier --check convex/",
    "format:fix": "bunx turbo run format -- --write && bun run format:convex --write",
    "typecheck": "bunx turbo run typecheck && bun run typecheck:convex",
    "typecheck:convex": "bunx tsc --noEmit -p convex/tsconfig.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "bun-types": "^1.3.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jose": "^6.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8.53.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "!packages/mtg-image-db"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "@types/react": "^19.2.2",
      "@types/react-dom": "^19.2.2",
      "react-error-boundary": "^4.0.0",
      "eslint": "^9.20.0",
      "prettier": "^3.6.2",
      "typescript": "~5.9",
      "typescript-eslint": "^8.24.1",
      "playwright": "^1.55.1",
      "@playwright/test": "^1.55.1",
      "dotenv-cli": "^7.4.2",
      "tailwindcss": "^4.1.11"
    }
  },
  "dependencies": {
    "@auth/core": "^0.37.0",
    "@convex-dev/auth": "^0.0.90",
    "convex": "^1.31.4"
  }
}
