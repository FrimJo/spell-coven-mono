{
  "name": "spell-coven",
  "engines": {
    "node": "~22.20",
    "bun": "^1.1.30"
  },
  "engineStrict": true,
  "packageManager": "bun@1.1.30",
  "scripts": {
    "build": "bunx turbo run build",
    "dev": "bunx turbo run dev",
    "test": "bunx turbo run test",
    "lint": "bunx turbo run lint",
    "format": "bunx turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "lint:fix": "bunx turbo run lint -- --fix",
    "format:fix": "bunx turbo run format -- --write",
    "check-types": "bunx turbo run check-types"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "!packages/mtg-image-db"
    ],
    "catalog": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "@types/react": "^19.2.2",
      "@types/react-dom": "^19.2.2",
      "react-error-boundary": "^4.0.0",
      "eslint": "^9.20.0",
      "prettier": "^3.6.2",
      "typescript": "~5.7",
      "typescript-eslint": "^8.24.1",
      "playwright": "^1.55.1",
      "@playwright/test": "^1.55.1"
    }
  }
}
