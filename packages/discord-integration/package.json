{
  "name": "@repo/discord-integration",
  "version": "1.0.0",
  "description": "Discord API integration for Spell Coven - Pure Discord API logic with zero React dependencies",
  "type": "module",
  "exports": {
    "./types": "./src/types/index.ts",
    "./clients": "./src/clients/index.ts",
    "./managers": "./src/managers/index.ts",
    "./utils": "./src/utils/index.ts"
  },
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "format": "prettier --check . --ignore-path ./.prettierignore --ignore-path ./.gitignore --ignore-path ../../.gitignore",
    "format:fix": "prettier --check . --ignore-path ./.prettierignore --ignore-path ./.gitignore --ignore-path ../../.gitignore --write",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "discord-api-types": "^0.37.97",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.14.10",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "vitest": "^1.6.0",
    "eslint": "^9.34.0",
    "typescript": "^5.5.3"
  },
  "prettier": "@repo/prettier-config"
}
