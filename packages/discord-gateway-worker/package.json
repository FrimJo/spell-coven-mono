{
  "name": "@repo/discord-gateway-worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "with-env": "dotenv -e ../../.env.development -e ../../.env.development.local -e .env.development -e .env.development.local --",
    "dev": "bun run with-env -- tsx watch src/index.ts",
    "build": "tsup",
    "start": "bun run with-env -- node dist/index.js",
    "format": "prettier --check . --ignore-path ./.prettierignore --ignore-path ./.gitignore --ignore-path ../../.gitignore",
    "format:fix": "prettier --check . --ignore-path ./.prettierignore --ignore-path ./.gitignore --ignore-path ../../.gitignore --write",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/eslint-config": "workspace:*",
    "ws": "^8.18.0",
    "discord-api-types": "^0.37.97",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.14.9",
    "@types/ws": "^8.5.12",
    "dotenv-cli": "^7.4.2",
    "tsup": "^8.1.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "prettier": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
