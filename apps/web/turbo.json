{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "prepare-assets": {
      "cache": false,
      "outputs": ["public/index_out/**"]
    },
    "build": {
      "dependsOn": ["@repo/mtg-image-db#build", "prepare-assets", "^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["@repo/mtg-image-db#build", "prepare-assets"],
      "cache": false,
      "persistent": true
    }
  }
}
