# Discord Bot Configuration
DISCORD_BOT_TOKEN=your-bot-token-here
PRIMARY_GUILD_ID=your-guild-id-here

# Hub Secret (shared with Gateway Worker)
HUB_SECRET=development-secret-change-in-production

# JWT Configuration
JWT_ISSUER=https://your-auth.example.com
JWT_AUDIENCE=spell-coven-web
JWT_PUBLIC_JWK_URL=https://your-auth.example.com/.well-known/jwks.json

# CORS Configuration
WEB_ORIGIN=http://localhost:3000

# Optional: Logging
LOG_LEVEL=info

# Private Voice Rooms Feature Flags
# Secret used to sign invite tokens for private voice rooms (32+ chars recommended).
ROOM_TOKEN_SECRET=development-room-secret-change-me
# Enable private room creation and join flows (set to "true" in environments that support required bot permissions).
ENABLE_PRIVATE_ROOMS=false
# Ensure the Discord bot has MANAGE_ROLES, MANAGE_CHANNELS, and CREATE_INSTANT_INVITE permissions before enabling private rooms.
