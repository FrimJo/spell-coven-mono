{
    "name": "@repo/web",
    "private": true,
    "type": "module",
    "scripts": {
      "dev": "vite dev --port 3000",
      "start": "node .output/server/index.mjs",
      "build": "vite build",
      "serve": "vite preview",
      "prepare-assets": "mkdir -p public/index_out && cp -f ../../packages/mtg-image-db/index_out/embeddings.f16bin public/index_out/embeddings.f16bin && cp -f ../../packages/mtg-image-db/index_out/meta.json public/index_out/meta.json",
      "test": "vitest run",
      "format": "prettier --check . --ignore-path ./.prettierignore --ignore-path ./.gitignore --ignore-path ../../.gitignore",
      "lint": "next lint --max-warnings 0",
      "check-types": "tsc --noEmit"
    },
    "dependencies": {
      "@repo/mtg-image-db": "workspace:*",
      "@xenova/transformers": "^2.17.2",
      "@tailwindcss/vite": "^4.0.6",
      "@tanstack/react-router": "^1.132.0",
      "@tanstack/react-router-devtools": "^1.132.0",
      "@tanstack/router-plugin": "^1.132.0",
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "tailwindcss": "^4.0.6",
      "vite-tsconfig-paths": "^5.1.4"
    },
    "devDependencies": {
      "playwright": "catalog:",
      "@playwright/test": "catalog:",
      "@repo/eslint-config": "workspace:*",
      "@repo/prettier-config": "workspace:*",
      "@repo/tailwind-config": "workspace:*",
      "@repo/typescript-config": "workspace:*",
      "@testing-library/dom": "^10.4.0",
      "@testing-library/react": "^16.2.0",
      "@types/node": "^22.10.2",
      "@types/react": "^19.0.8",
      "@types/react-dom": "^19.0.3",
      "@vitejs/plugin-react": "^4.3.4",
      "jsdom": "^26.0.0",
      "typescript": "catalog:",
      "vite": "^7.1.7",
      "vitest": "^3.0.5",
      "web-vitals": "^4.2.4"
    },
    "prettier": "@repo/prettier-config"
  }