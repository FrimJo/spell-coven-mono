{
  "name": "@repo/peerjs-server-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "with-env": "dotenv -e ../../.env.development -e ../../.env.development.local -e .env.development -e .env.development.local --",
    "generate-certs": "tsx scripts/generate-certs.ts",
    "dev": "bun run with-env -- tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "format": "bun run prettier --check . --ignore-path ./.prettierignore --ignore-path ./.gitignore --ignore-path ../../.gitignore",
    "format:fix": "bun run prettier --write . --ignore-path ./.prettierignore --ignore-path ./.gitignore --ignore-path ../../.gitignore",
    "lint": "bun run eslint . --max-warnings 0",
    "lint:fix": "bun run eslint . --max-warnings 0 --fix",
    "typecheck": "bun run tsc --noEmit"
  },
  "dependencies": {
    "peer": "^1.0.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "dotenv-cli": "catalog:",
    "eslint": "^9.34.0",
    "prettier": "catalog:",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "prettier": "@repo/prettier-config"
}
